@model Wedding

<div class="d-flex flex-column justify-content-center">
    <div class="d-flex flex-row justify-content-around">
        <h1>@Model.Wedder_1 and @Model.Wedder_2's Wedding</h1>
        <p><a asp-action="Dashboard" asp-controller="Home">Dashboard</a> | | <a asp-action="Logout" asp-controller="Login">Logout</a></p>
    </div>
    <div class="d-flex flex-column justify-content-left w-50" style="margin-left: 20%; margin-top: 50px;">
        <p>Date: @Model.Date.ToString("MMMM dd, yyyy")</p>
        <p>Guests:</p>
        <ul>
            @{
                @foreach(var rsvp in Model.Users)
                {
                    <li>@rsvp.User.FirstName @rsvp.User.LastName</li>;
                }
            }
        </ul>
    </div>
</div>