@model Wedding

<div class="d-flex flex-column justify-content-center">
    <div class="d-flex flex-row justify-content-around w-50" style="margin-left: 25%;">
        <h1>Plan Your Wedding</h1>
        <p><a asp-action="Dashboard" asp-controller="Home">Dashboard</a> | | <a asp-action="Logout" asp-controller="Login">Logout</a></p>
    </div>
    <div class="d-flex flex-column justify-content-center w-50" style="margin-left: 25%;">
        <form class="form-group" asp-action="SaveWedding" asp-controller="Home" method="POST">
            <span asp-validation-for="Wedder_1"></span><br>
            <label asp-for="Wedder_1">Wedder One</label>
            <input class="form-control" type="text" asp-for="Wedder_1">
            <span asp-validation-for="Wedder_2"></span><br>
            <label asp-for="Wedder_2">Wedder Two</label>
            <input class="form-control" type="text" asp-for="Wedder_2">
            <span asp-validation-for="Date"></span><br>
            <label asp-for="Date">Date</label>
            <input class="form-control" type="date" asp-for="Date">
            <span asp-validation-for="Address"></span><br>
            <label asp-for="Address">Address</label>
            <input class="form-control" type="text" asp-for="Address">
            <input hidden asp-for="UserId" value="@ViewBag.userid">
            <button type="submit" class="btn btn-success w-25 mt-3">Create</button>
        </form>
    </div>
</div>