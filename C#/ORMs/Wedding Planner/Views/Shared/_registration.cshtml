<!DOCTYPE html>
<html lang="en">
<head>
    @model User
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
</head>
<body>
    <div class="d-flex justify-content-center">
        <form class="form-group d-flex flex-row justify-content-center gap-5" asp-controller="Home" asp-action="Register">
            <div class="d-flex flex-column justify-content-left">
                <span asp-validation-for="FirstName"></span>
                <label asp-for="FirstName">First Name</label>
                <input type="text" class="form-control" asp-for="FirstName">
                <span asp-validation-for="LastName"></span>
                <label asp-for="LastName">Last Name</label>
                <input type="text" class="form-control" asp-for="LastName">
                <span asp-validation-for="Email"></span>
                <label asp-for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Email">
                <span asp-validation-for="Password"></span>
                <label asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password">
                <span asp-validation-for="Confirm"></span>
                <label asp-for="Confirm">Confirm Password</label>
                <input type="password" class="form-control" asp-for="Confirm">
                <button type="submit" class="btn btn-success">Register</button>
            </div>
        </form>
    </div>
</body>
</html>