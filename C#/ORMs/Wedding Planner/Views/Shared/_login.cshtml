
@model UserInLogin

    <div class="d-flex flex-column justify-content-top">
        <h1>Login</h1>
        <div class="d-flex flex-column">
            <form class="form-group" asp-controller="Login" asp-action="Access">
                <span asp-validation-for="Email" style="color: red;"></span>
                <label asp-for="Email">Email</label>
                <input class="form-control" type="email" asp-for="Email">
                <span asp-validation-for="Password"></span>
                <label asp-for="Password">Password</label>
                <input class="form-control" type="password" asp-for="Password">
                <button type="submit" class="btn btn-success mt-3">Sign In</button>
            </form>
        </div>
    </div>
