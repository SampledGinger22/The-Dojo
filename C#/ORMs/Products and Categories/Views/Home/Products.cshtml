@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    @model Product
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
</head>
<body>
    <div class="d-flex flex-row justify-content-center" style="gap: 100px;">
        <div class="d-flex flex-column justify-content-top">
            <form asp-controller="Home" asp-action="SaveProduct" method="POST" class="form-group">
                <h1>New Product</h1>
                <span asp-validation-for="Name"></span>
                <label asp-for="Name"></label>
                <input class="form-control" type="text" asp-for="Name"> 
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Price"></span>
                <label asp-for="Price"></label>
                <input class="form-control" type="text" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency" asp-for="Price">
                <button class="btn btn-success mt-3" type="submit">Create</button>
            </form>
        </div>
        <div class="vr"></div>
        <div class="d-flex flex-column justify-content-top">
            <h1 style="margin-bottom: 50px">Existing Products</h1>
            @if(ViewBag.products.Count != 0)
            {
                @foreach(var product in ViewBag.products)
                {
                    <a href="products/view/@product.ProductId">@product.Name</a>
                }
            }
            else
            {
            <p>No Existing Products, Please Create a Product</p>
            }
        </div> 
    </div>
</body>
</html>