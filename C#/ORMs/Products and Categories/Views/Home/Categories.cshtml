@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    @model Category
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
</head>
<body>
    <div class="d-flex flex-row justify-content-center" style="gap: 100px;">
        <div class="d-flex flex-column justify-content-top">
            <form asp-controller="Home" asp-action="SaveCategory" method="POST" class="form-group">
                <h1>New Category</h1>
                <span asp-validation-for="Name"></span>
                <label asp-for="Name">Name</label>
                <input class="form-control" type="text" asp-for="Name"> 
                <button class="btn btn-success mt-3" type="submit">Create</button>
            </form>
        </div>
        <div class="vr"></div>
        <div class="d-flex flex-column justify-content-top">
            <h1 style="margin-bottom: 50px">Existing Categories</h1>
            @if(ViewBag.categories != null)
            {
                @foreach(var category in ViewBag.categories)
                {
                    <a href="categories/view/@category.CategoryId">@category.Name</a>
                }
            }
            else
            {
            <p>No Existing Categories, Please Create a Category</p>
            }
        </div> 
    </div>
</body>
</html>