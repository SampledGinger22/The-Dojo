@model Dish;

@{
    ViewData["Title"] = "Home Page";
}

<div class="body">
    <form class="form-group d-flex flex-row gap-5" asp-controller="Home" asp-action="updatedish" method="POST">
        <div class="d-flex flex-column">
            <input asp-for="@Model.DishId" hidden value="@Model.DishId">
            <span asp-validation-for="Chef" style="color: red;"></span>
            <label asp-for="Chef" >Chef's Name</label>
            <input asp-for="Chef" type="text" class="form-control" value="@Model.Chef">
            <span asp-validation-for="Name" style="color: red;"></span>
            <label asp-for="Name">Name of Dish</label>
            <input asp-for="Name" class="form-control" value="@Model.Name">
            <span asp-validation-for="Calories" style="color: red;"></span>
            <label asp-for="Calories"># of Calories</label>
            <input asp-for="Calories" class="form-control" value="@Model.Calories">
        </div>
        <div class="d-flex flex-column">
            <span asp-validation-for="Tastiness" style="color: red;"></span>
            <label asp-for="Tastiness">Tastiness</label>
            <select asp-for="Tastiness">
                <option value="@Model.Tastiness" hidden default selected>@Model.Tastiness</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="2">3</option>
                <option value="2">4</option>
                <option value="2">5</option>
            </select>
        </div>
        <div class="d-flex flex-column">
            <span asp-validation-for="Description" style="color: red;"></span>
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
            <button class="btn btn-success" type="submit">Update Dish</button>
        </div>
    </form>
</div>
