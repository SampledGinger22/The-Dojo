    @{
    ViewData["Title"] = "Home Page";
    }
<!DOCTYPE html>
<html lang="en">
<head>
    @model List<Chef>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chefs</title>
</head>
<body>
    <div class="d-flex flex-column w-100">
        <h1>Check out our roster of Chefs!</h1>
        <hr style="width: 50%;">
        <table class="table" style="width: fit-content; min-width: 50%;">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th># of Dishes</th>
                </tr>
            </thead>
            <tbody class="table-striped">
                @{
                    if(Model.Count() != 0) 
                    {
                    foreach(var chef in Model)
                        {
                        <tr>
                            @{
                            int GetAge(DateTime dateOfBirth)
                                {
                                var today = DateTime.Today;

                                var a = (today.Year * 100 + today.Month) * 100 + today.Day;
                                var b = (dateOfBirth.Year * 100 + dateOfBirth.Month) * 100 + dateOfBirth.Day;

                                return (a - b) / 10000;
                                }
                            }
                            <td>@chef.FirstName @chef.LastName</td>
                            <td>@GetAge(@chef.DateOfBirth)</td>
                            <td>@chef.newDishes.Count()</td>
                        </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>