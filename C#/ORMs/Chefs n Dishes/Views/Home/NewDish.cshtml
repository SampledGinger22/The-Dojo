@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    @model Dish
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add a New Dish</title>
</head>
<body>
    <div class="body">
    <form class="form-group d-flex flex-row gap-5" asp-controller="Home" asp-action="SaveDish" method="POST">
        <div class="d-flex flex-column">
            <span asp-validation-for="Name" style="color: red;"></span>
            <label asp-for="Name">Name of Dish</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Calories" style="color: red;"></span>
            <label asp-for="Calories"># of Calories</label>
            <input asp-for="Calories" class="form-control">
            <span asp-validation-for="Description" style="color: red;"></span>
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="d-flex flex-column">
            <span asp-validation-for="ChefId" style="color: red;"></span>
            <label asp-for="ChefId">Chef's Name</label>
            <select asp-for="ChefId" type="text" class="form-select">
                <option hidden selected value="">Select Chef</option>
                @foreach(var chef in @ViewBag.Chefs)
                {
                <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                }
            </select>
            <button class="btn btn-success mt-5" type="submit">Add Dish</button>
        </div>
        <div class="d-flex flex-column">
            <span asp-validation-for="Tastiness" style="color: red;"></span>
            <label asp-for="Tastiness">Tastiness</label>
            <select asp-for="Tastiness">
                <option value="1" default selected>1</option>
                <option value="2">2</option>
                <option value="2">3</option>
                <option value="2">4</option>
                <option value="2">5</option>
            </select>
        </div>
    </form>
</div>
</body>
</html>