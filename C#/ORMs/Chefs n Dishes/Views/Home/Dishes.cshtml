    @{
    ViewData["Title"] = "Home Page";
    }
<!DOCTYPE html>
<html lang="en">
<head>
    @model List<Dish>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chefs</title>
</head>
<body>
    <div class="d-flex flex-column w-100">
        <h1>Yum, take a look at our tasty dishes!</h1>
        <hr style="width: 50%;">
        <table class="table" style="width: fit-content; min-width: 50%;">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Chef</th>
                    <th>Tastiness</th>
                    <th>Calories</th>
                </tr>
            </thead>
            <tbody class="table-striped" style="overflow-y: scroll;">
                @{
                    if(Model.Count() != 0) 
                    {
                    foreach(var dish in Model)
                        {
                        <tr>
                            <td>@dish.Name</td>
                            <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                            <td>@dish.Tastiness</td>
                            <td>@dish.Calories</td>
                        </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>

