<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Foods</title>
</head>
<body>
@{
    var StringList = new List<string>
    {
        "Apple Pie",
        "Burritos",
        "Clams Casino",
        "Donuts"
    };
    <h1>Here are some delicious foods!</h1>
    foreach(var word in StringList)
    {
        string temp = word.Substring(0,1);
        <div>
            @if(temp == "c" || temp == "C")
            {
                <p style="color: red; margin-left: 45px;">@word</p>
            }
            @if(temp != "c" && temp != "C")
            {
                <p style="margin-left: 45px;">@word</p>
            }
        </div>
    }
}
</body>
</html>